<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoricoDetalhadoFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        android:stretchColumns="1">

        <TableRow
            android:id="@+id/apag_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A ver um teste detalhadamente:"
                android:textColor="#000000"
                android:textSize="18sp" />
        </TableRow>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:stretchColumns="1"

            >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="#7EC5CAE9"
                android:minHeight="55dp">

                <Spinner
                    android:id="@+id/spinner_bebida1"
                    android:layout_width="368dp"
                    android:layout_height="64dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Spinner
                    android:id="@+id/spinner_copo1"
                    android:layout_width="368dp"
                    android:layout_height="64dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantidade:" />

                        <SeekBar
                            android:id="@+id/quantidade1"
                            android:layout_width="306dp"
                            android:max="20"
                            android:min="1"
                            android:layout_height="wrap_content" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:id="@+id/tt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/quant_int"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="#D32727"
                            android:textSize="16sp" />
                    </TableRow>

                </TableLayout>

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#eee"
                android:minHeight="35dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Volume do copo" />

                        <SeekBar
                            android:id="@+id/volume_consumido1"
                            android:layout_width="277dp"
                            android:max="1000"
                            android:min="1"
                            android:layout_height="wrap_content" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/volume_int"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="#1D39D1"
                            android:textSize="16sp" />

                    </TableRow>

                </TableLayout>

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#eee"
                android:minHeight="35dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Graduação:" />

                        <SeekBar
                            android:id="@+id/graduacao1"
                            android:layout_width="309dp"
                            android:max="100"
                            android:layout_height="wrap_content" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/grad_int"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textAlignment="center"
                            android:textColor="#305307"
                            android:textSize="16sp" />
                    </TableRow>

                </TableLayout>

            </TableRow>

            <TableRow
                android:id="@+id/apag_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/resultado_tested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#C1B9B9"
                    android:text="Resultado: 100022.05 g/l."
                    android:textAlignment="center"
                    android:textColor="#3F51B5"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:id="@+id/apag_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btn_eliminar"
                    android:layout_width="55dp"
                    android:width="55dp"
                    android:background="#770202"
                    android:maxWidth="55dp"
                    android:onClick="calculaTaxa"
                    android:text="Eliminar este teste"
                    android:textColor="#FFFFFF" />

            </TableRow>


        </TableLayout>

    </TableLayout>
</FrameLayout>