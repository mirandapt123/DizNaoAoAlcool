<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BebidaFragment">

    <TableLayout
        android:layout_width="393dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        android:stretchColumns="1" >

        <TableRow
            android:id="@+id/eliminar_1111"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_Historico2"
                android:layout_width="401dp"
                android:layout_height="wrap_content"
                android:text="A carregar dados..."
                android:textAlignment="center"
                android:textColor="#491010"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:id="@+id/eliminar_ordenar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Spinner
                android:id="@+id/spinner_ordenar"
                android:layout_width="387dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown" />

        </TableRow>

        <TableRow
            android:id="@+id/eliminar_limpar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_clearall"
                android:layout_width="389dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#500202"
                android:text="Limpar histórico"
                android:textColor="#FFFFFF" />

        </TableRow>

        <TableRow
            android:id="@+id/eliminar_111"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
