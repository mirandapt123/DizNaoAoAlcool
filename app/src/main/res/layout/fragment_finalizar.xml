<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BebidaFragment">

    <TableLayout
        android:layout_width="393dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/data_teste"
                android:layout_width="379dp"
                android:layout_height="match_parent"
                android:text="O resultado do teste foi:"
                android:textColor="#0E0E0E"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="381dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:gravity="center">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/resultado"
                        android:layout_width="368dp"
                        android:layout_height="200dp"
                        android:background="#DDD0D0"
                        android:gravity="center"
                        android:text="XXX g/l"
                        android:textColor="#0E0E0E"
                        android:textSize="60sp" />
                </TableRow>

            </TableLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/passouNao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuidado! Não pode conduzir!"
                android:textAlignment="center"
                android:textColor="#E40B0B"
                android:textSize="26sp" />

        </TableRow>

        <TableRow
            android:id="@+id/eliminar_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView142"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:id="@+id/eliminar_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_dinheiro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Se conduzir, a multa poderá ir até:"
                android:textColor="#0F3AAA"
                android:textSize="22sp" />
        </TableRow>

        <TableRow
            android:id="@+id/eliminar_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E12C2C"
            android:gravity="center">

            <TextView
                android:id="@+id/multa_dinheiro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="X€ de coima máxima."
                android:textAlignment="center"
                android:textColor="#FBFBFB"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:id="@+id/eliminar_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView132"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:id="@+id/eliminar_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E12C2C"
            android:gravity="center">

            <TextView
                android:id="@+id/pontos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Perda de X pontos."
                android:textAlignment="center"
                android:textColor="#FBFBFB"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:id="@+id/eliminar_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView1321"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:id="@+id/eliminar_7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E12C2C"
            android:gravity="center">

            <TextView
                android:id="@+id/inibicao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Até X meses sem carta."
                android:textAlignment="center"
                android:textColor="#FBFBFB"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView133"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:id="@+id/eliminar_9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E12C2C"
            android:gravity="center">

            <TextView
                android:id="@+id/tipoContra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Contraordenação X"
                android:textAlignment="center"
                android:textColor="#FBFBFB"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:id="@+id/eliminar_101"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView233"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <CheckBox
                android:id="@+id/save_ceck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clique para guardar este teste."
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/eliminar_100"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView134"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF">

            <Button
                android:id="@+id/ver_mais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#000949"
                android:onClick="save"
                android:text="Voltar ao menu principal"
                android:textColor="#FFFFFF"
                tools:ignore="OnClick" />
        </TableRow>

    </TableLayout>

</FrameLayout>